<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Цена материала (кв.м)"
        android:id="@+id/tv_ps"
        android:layout_width="196dp"
        android:textSize="18sp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:inputType="number"
        android:id="@+id/et_ps"
        android:background="@android:drawable/editbox_background"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_width="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_width"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_ps" />

    <TextView
        android:text="Размер (мм)"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ps"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_size"
        android:layout_width="120dp" />

    <EditText
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_len"
        android:background="@android:drawable/editbox_background"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_size"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_size"
        android:textSize="18sp"
        android:layout_width="58dp" />

    <TextView
        android:text="x"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        app:layout_constraintLeft_toRightOf="@+id/et_len"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_len"
        android:textSize="18sp" />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/et_width"
        android:background="@android:drawable/editbox_background"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_len"
        android:textSize="18sp"
        android:layout_width="58dp" />

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/et_width"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_width"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_base"
        android:background="@android:color/darker_gray"
        android:layout_height="35dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_width"
        android:textSize="18sp"
        android:layout_width="58dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Количество отверстий"
        android:id="@+id/tv_ch"
        android:layout_width="197dp"
        android:textSize="18sp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_ch" />

    <TextView
        android:text="Дополнительная обработка"
        android:id="@+id/textView19"
        android:layout_width="266dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ch" />

    <EditText
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_ch"
        android:background="@android:drawable/editbox_background"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/et_width"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et_width"
        android:textSize="18sp"
        android:layout_width="58dp" />

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/et_ch"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_ch" />

    <TextView
        android:id="@+id/tv_hole"
        android:background="@android:color/darker_gray"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView21"
        android:layout_width="58dp" />

    <TextView
        android:text="="
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:id="@+id/textView26"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/rg_dop"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/rg_dop"
        android:layout_marginTop="40dp" />

    <RadioGroup
        android:layout_width="266dp"
        android:layout_height="104dp"
        android:background="@android:drawable/editbox_background"
        android:elevation="0dp"
        android:id="@+id/rg_dop"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <RadioButton
            android:text="Нет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_no"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:text="Шлифовка"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_shl"
            android:layout_weight="1" />

        <RadioButton
            android:text="Фаска"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_fask"
            android:layout_weight="1" />

    </RadioGroup>

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:text="Рассчитать"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_dop"
        android:layout_marginLeft="58dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Итого стоимость заказа"
        android:id="@+id/textView28"
        android:layout_width="249dp"
        android:textSize="18sp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_dop"
        android:background="@android:color/darker_gray"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView26"
        android:layout_width="58dp" />

    <TextView
        android:id="@+id/tvResult"
        android:background="@android:color/darker_gray"
        android:layout_height="35dp"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="89dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView28" />

    <Button
        android:id="@+id/btnsms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Смс-отчет"
        app:layout_constraintTop_toTopOf="@+id/btnCalc"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>