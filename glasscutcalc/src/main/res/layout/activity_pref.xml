<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pref"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.startandroid.glasscutcalc.PrefActivity">

    <!--android:layout_width="253dp"
    android:layout_height="36dp"-->

    <TextView
        style="@style/labels"
        android:text="Стоимость отверстий в %% к стоимости детали "
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        style="@style/EditText_Number"
        android:id="@+id/et_prchole"
        android:text="10"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="24dp" />

    <TextView
        style="@style/labels"
        android:text="Стоимость шлифовки в %% к стоимости детали"
        android:layout_width="253dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_margin="24dp"
        android:layout_marginTop="48dp" />

    <EditText
        style="@style/EditText_Number"
        android:id="@+id/et_prcshl"
        android:text="25"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"/>

    <TextView
        style="@style/labels"
        android:text="Стоимость фаски в %% к стоимости детали "
        android:layout_width="253dp"
        android:id="@+id/textView4"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        style="@style/EditText_Number"
        android:id="@+id/et_prcfask"
        android:text="50"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/textView4" />
</android.support.constraint.ConstraintLayout>
